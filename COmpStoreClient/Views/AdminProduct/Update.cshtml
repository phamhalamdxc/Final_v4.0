@using COmpStore.Models.ViewModels.ProductAdmin
@model ProductAdminUpdate
@{
    ViewData["Title"] = "Cập nhật";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<link href="~/lib/cropit/di" rel="stylesheet" />*@

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><strong>Sản phẩm</strong> - Cập nhật</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="col-md-8 col-md-offset-2">
            @if (ViewBag.IsSuccess != null)
            {
                <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    Lưu thành công. Nhấn vào <a asp-action="Index" asp-controller="AdminProduct" class="alert-link">đây</a> để trở về trang trước.
                </div>
            }

            <div class="panel-body">
                <form asp-action="Update" asp-controller="AdminProduct" class="form-horizontal" method="post" enctype="multipart/form-data">

                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="ProductName"></label>
                        <input asp-for="ProductName" type="text" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="SubCategoryId"></label>
                        <select asp-for="SubCategoryId" asp-items="@(new SelectList(ViewBag.SubCategories, "Id", "Name", ViewBag.SubCategoryId))" class="form-control"></select>
                        <span asp-validation-for="SubCategoryId"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PublisherId"></label>
                        <select asp-for="PublisherId" asp-items="@(new SelectList(ViewBag.Publishers,"Id","Name", ViewBag.PublisherId))" class="form-control"></select>
                        <span asp-validation-for="PublisherId"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsFeatured"></label>
                        <input asp-for="IsFeatured" type="text" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="CurrentPrice"></label>
                        <input asp-for="CurrentPrice" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Number"></label>
                        <input asp-for="Number" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UnitCost"></label>
                        <input asp-for="UnitCost" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UnitsInStock"></label>
                        <input asp-for="UnitsInStock" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" type="text" class="form-control"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <span asp-validation-for="ProductImage"></span>
                    <div class="form-group" id="addProduct">
                        <fieldset>
                            <legend>Hình ảnh</legend>

                            <div class="panel-body">
                                <div class="image-editor" id="imageEditor" style="display:none">
                                    <div class="cropit-preview"></div>
                                    <div class="image-size-label">
                                        Resize image
                                    </div>
                                    <input type="range" class="cropit-image-zoom-input">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <input type="file" class="cropit-image-input">
                                        </div>
                                        <div class="form-group pull-right">
                                            <button type="button" class="rotate-ccw btn btn-primary"><span class="fa fa-rotate-left"></span></button>
                                            <button type="button" class="rotate-cw btn btn-primary"><span class="fa fa-rotate-right"></span></button>
                                            <button type="button" class="export btn btn-primary"><span class="fa fa-crop"></span></button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row" id="imageContainer">
                                <div class="col-md-3 image-item-block">
                                    <input asp-for="ProductImage" type="hidden" />
                                    <img class="img-thumbnail product-temp-img selected" src="http://localhost:40001/images/@Model.ProductImage">
                                </div>
                            </div>

                        </fieldset>
                    </div>
                    <div class="form-group pull-right">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <a asp-action="Index" asp-controller="AdminProduct" class="btn btn-default">Hủy</a>
                    </div>


                </form>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>


<!-- /.row -->

@section Scripts{
    <script src="~/lib/cropit/dist/jquery.cropit.js"></script>
    <script src="~/js/admin_product.js"></script>
}