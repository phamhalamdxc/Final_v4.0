@using COmpStore.Models.ViewModels.PublisherAdmin
@model PublisherAdminDetails
@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Nhà sản xuất - Chi tiết</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="col-md-6">
            @if (ViewBag.IsSuccess != null)
            {
                <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    Lưu thành công. Nhấn vào <a asp-action="Index" asp-controller="AdminPublisher" class="alert-link">đây</a> để trở về trang trước.
                </div>
            }
            <div class="form-group">
                <label>Mã: </label><span> @Model.Id</span>
            </div>
            <div class="form-group">
                <label>Tên: </label><span> @Model.Name</span>
            </div>
            <div class="form-group">
                <label>Số loại con: </label><span> @Model.Products.Count()</span>
            </div>
        </div>

    </div>
    <!-- /.col-lg-12 -->
    <div class="col-md-12">
        <div class="panel-body">
            <div class="form-group">
                <a asp-action="Create" asp-controller="AdminPublisher" asp-route-id="@Model.Id" id="add_btn" class="btn btn-primary btn-sm">Thêm</a>
                <a id="btn_delete" class="btn btn-danger btn-sm disabled">Xóa</a>
                <a id="btn_uncheck" class="btn btn-default btn-sm pull-right" style="display:none">Bỏ chọn</a>
            </div>
            <div class="table-responsive">
                <table id="content_table" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng tồn</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr data-id="@product.Id">
                                <td>@product.Id</td>
                                <td>@product.ProductName</td>
                                <td>@product.UnitsInStock</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-controller="AdminProduct" asp-route-id="@product.Id" class="text-primary" title="Chi tiết">
                                        <span class="glyphicon glyphicon-info-sign"></span>
                                    </a>
                                    <a asp-action="Update" asp-controller="AdminProduct" asp-route-id="@product.Id" class="text-primary" title="Chỉnh sửa">
                                        &nbsp;<span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->

@section Scripts{
}